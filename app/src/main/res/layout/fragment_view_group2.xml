<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ViewGroupFragment">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:orientation="horizontal"
        android:background="#FFB800"
        >
        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_back"
            android:layout_margin="10dp"
            />
        <TextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="About Course"
            android:textColor="#1A4E79"
            android:textSize="25dp"
            />
        <ImageView
            android:id="@+id/add_btn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:src="@drawable/ic_add"
            android:layout_marginLeft="130dp"
            android:layout_marginVertical="7dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Group name:"
            android:textColor="#1A4E79"
            android:textSize="20sp"
            android:layout_margin="5dp"
            />
        <TextView
            android:id="@+id/group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Android 1"
            android:textColor="#1A4E79"
            android:textSize="20sp"
            android:layout_margin="5dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Group time:"
            android:textColor="#1A4E79"
            android:textSize="20sp"
            android:layout_margin="5dp"
            />
        <TextView
            android:id="@+id/group_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Android 1"
            android:textColor="#1A4E79"
            android:textSize="20sp"
            android:layout_margin="5dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Group days:"
            android:textColor="#1A4E79"
            android:textSize="20sp"
            android:layout_margin="5dp"
            />
        <TextView
            android:id="@+id/group_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Android 1"
            android:textColor="#1A4E79"
            android:textSize="20sp"
            android:layout_margin="5dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Group mentor:"
            android:textColor="#1A4E79"
            android:textSize="20sp"
            android:layout_margin="5dp"
            />
        <TextView
            android:id="@+id/group_mentor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Android 1"
            android:textColor="#1A4E79"
            android:textSize="20sp"
            android:layout_margin="5dp"
            />

    </LinearLayout>

    <Button
        android:id="@+id/start_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFB800"
        android:layout_margin="20dp"
        android:text="Start lessons to the group"
        android:textAllCaps="false"
        android:textColor="#1A4E79"
        android:textSize="15dp"
        />
    <TextView
        android:gravity="center"
        android:id="@+id/tv_started"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFB800"
        android:layout_margin="20dp"
        android:text="The lessons started"
        android:visibility="gone"
        android:textAllCaps="false"
        android:textColor="#1A4E79"
        android:textSize="15dp"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/rv_item_mentors"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        />

</LinearLayout>